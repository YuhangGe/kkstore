{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "outDir": ".tmp",
    "noEmit": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./demo/**/*"]
}
